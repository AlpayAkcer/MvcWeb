@model MvcWeb.Models.Entity.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!-- Page header -->
<div class="page-header">
    <div class="page-header-content">
        <div class="page-title">
            <h4><i class="icon-arrow-left52 position-left"></i> <span class="text-semibold">Başlık</span> - Yönetimi</h4>
        </div>
    </div>
    <div class="breadcrumb-line">
        <ul class="breadcrumb">
            <li><a href="/Dashboard"><i class="icon-home2 position-left"></i> Dashboard</a></li>
            <li><a href="/Heading/Index">Başlık Listesi</a></li>
            <li class="active">Başlık Ekle</li>
        </ul>
    </div>
</div>


<!-- Content area -->
<div class="content">
    <!-- /page header -->
    <div class="panel panel-flat">
        <div class="panel-body">
            @using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-6">
                        <fieldset class="text-semibold">
                            <legend><i class="icon-reading position-left"></i> İçerik Başlık Bilgileri</legend>
                            <div class="form-group">
                                <label>Başlık Adı</label>
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
                            </div>
                        </fieldset>
                    </div>
                </div>
                <div class="text-right">
                    <button type="submit" class="btn btn-primary">Kaydet <i class="icon-arrow-right14 position-right"></i></button>
                </div>
            }
        </div>
    </div>
</div>

